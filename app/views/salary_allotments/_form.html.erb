<div class="container">
  <div class="row">
    <div class="column">
      <label><b>EmployeeId:</b></label>
      <%= @employee_details.employeeid %>
    </div>
    <div class="column">
      <label><b>Name:</b></label>
      <%= @employee_details.name %>
    </div>
    <div class="column">
      <label><b>MobileNo:</b></label>
      <%= @employee_details.mobileno %>
    </div>
  </div>

  <%= simple_form_for (@salary_allotment), :html => {:class => "form-inline"} do |f| %>
    <div class="row">
      <div class="column">
        <%= f.input :employee_id, :as => :hidden, label: false, input_html: {class: "form-control", :value => @employee_details.id }, :placeholder => "Total Count" %>

          <% @salary_heads.each do |salary_head| %>
          <%= f.fields_for :salary_head_hash do |p| %>
            <% salary_head_id = salary_head.id %>
            <%= p.input salary_head_id, :as => :hidden, label: false, input_html: {class: "form-control", :value => salary_head.id , :id => "salary_head_id_#{salary_head.id}"} %>
            <label><b><%= salary_head.salaryname %></b></label>
            <% salary_head_amount = "#{salary_head.id}" %>
            <%= p.input salary_head_amount, label: false, input_html: {class: "form-control"}, :placeholder => "Amount", :id => "salary_head_id_#{salary_head.id}" %>
          <% end %>
        <% end %>
        <%= f.button :submit, id: "submit", class: "btn green" %>
      </div>

    </div>
    <div class="column">
      <%#= link_to 'Back', salary_allotment_url %>
    </div>

    </div>
  <% end %>
  </div>